{% extends 'base_login_register.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Address_number</th>
                <td>{{ user.addressNumber }}</td>
            </tr>
            <tr>
                <th>Address_street</th>
                <td>{{ user.addressStreet }}</td>
            </tr>
            <tr>
                <th>Address_city</th>
                <td>{{ user.addressCity }}</td>
            </tr>
            <tr>
                <th>Address_zipcode</th>
                <td>{{ user.addressZipcode }}</td>
            </tr>
            <tr>
                <th>Address_country</th>
                <td>{{ user.addressCountry }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
